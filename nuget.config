<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <!-- 1. Визначаємо, звідки ми завантажуємо пакети -->
  <packageSources>
    <clear /> <!-- Ігноруємо всі глобальні налаштування -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
  </packageSources>

  <!-- 2. Це виправлення: -->
  <!-- Ми явно кажемо, що ВСІ пакети (pattern="*") можна -->
  <!-- завантажувати з нашого джерела "nuget.org". -->
  <packageSourceMapping>
    <clear /> <!-- Ігноруємо всі глобальні налаштування -->
    <packageSource key="nuget.org">
      <package pattern="*" />  <!-- Дозволити всі пакети з nuget.org -->
    </packageSource>
  </packageSourceMapping>

</configuration>